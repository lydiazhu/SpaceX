<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tool="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginHorizontal="8dp"
  android:layout_marginVertical="8dp">

  <ImageView
    android:id="@+id/patchImage"
    android:layout_width="48dp"
    android:layout_height="48dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tool:src="@drawable/ic_launcher_background" />

  <TextView
    android:id="@+id/patchName"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:textSize="16sp"
    app:layout_constraintLeft_toRightOf="@id/patchImage"
    app:layout_constraintTop_toTopOf="parent"
    tool:text="FalconSat" />

  <TextView
    android:id="@+id/patchDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    app:layout_constraintLeft_toRightOf="@id/patchImage"
    app:layout_constraintTop_toBottomOf="@id/patchName"
    tool:text="Friday, March 24, 2006" />

  <TextView
    android:id="@+id/patchStatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tool:text="Failed" />

</androidx.constraintlayout.widget.ConstraintLayout>